<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/blank"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar" />
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </FrameLayout>

    <TextView android:text="@string/sci" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVBienvenidaSCI"
        android:textSize="48dp"
        android:textStyle="bold"
        android:textColor="#ff1068ff"
        android:gravity="center"
        android:layout_above="@+id/tVBienvenidaLocator"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/locator" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVBienvenidaLocator"
        android:textSize="48dp"
        android:textStyle="bold"
        android:textColor="#ff050202"
        android:layout_above="@+id/tVBienvenidaService"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/service" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVBienvenidaService"
        android:textSize="48dp"
        android:textStyle="bold"
        android:textColor="#ffffcf02"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbInicial"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/tVBienvenidaService"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
